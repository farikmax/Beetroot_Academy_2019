<!-- CONTACTS START -->
<section class="contacts" id="contacts">
  <div id="map"></div>
  <div class="container">
    <div class="row mb-3">
      <div class="col-12 mb-3">
        <a class="contacts__icon--link" href="/">
          <img class="contacts__icon--img" src="img/contacts-icon.png" alt="icon">
        </a>
      </div>
      <div class="col-12">
        <h2 class="contacts__title">get in touch</h2>
      </div>
    </div>
  </div>
  <div class="container-fluid p-0">
    <div class="row mb-3">
      <div class="col-12">
        <div class="contacts-animation">
          <!-- CARD ADDRESS START -->
          <div class="contacts-animation__card">
            <div class="contacts-animation__card--icon">
              <a class="contacts-animation__card--link" href="#">
                <img class="contacts-animation__card--img" src="img/contacts-address-icon.png" alt="icon">
              </a>
            </div>
            <p class="contacts-animation__card--description">
              Ikan Piranha Atas 220C<br>Malang - East Java<br>Indonesia
            </p>
          </div>
          <!-- CARD ADDRESS END -->
          <!-- CARD PHONE START -->
          <div class="contacts-animation__card">
            <div class="contacts-animation__card--icon">
              <a class="contacts-animation__card--link" href="#">
                <img class="contacts-animation__card--img" src="img/contacts-phone-icon.png" alt="icon">
              </a>
            </div>
            <p class="contacts-animation__card--description">
              +9089452314
            </p>
          </div>
          <!-- CARD PHONE END -->
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 d-flex justify-content-center">
        <form id="contactForm" class="contact__form" action="#" method="post">
          <div class="contact__form--wrapper mb-4">
            <input class="contact__form--input" type="text" placeholder="Your Name *" required>
            <input class="contact__form--input" type="email" placeholder="Your Email *" required>
          </div>
          <textarea class="contact__form--textarea" rows="8" name="text" placeholder="Your Message *" required></textarea>
          <input class="contact__form--button" type="submit" value="send message">
        </form>
      </div>
    </div>
  </div>
</section>
<!-- CONTACTS END -->